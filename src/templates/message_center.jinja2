{% extends "base.jinja2" %}
{% block content %}
<div class="container form-width">
    <h1 class="text-center"> NOTIFICATIONS CENTER </h1>
    {% if message is defined %}
    <h4 class="text-center"><span class="label label-danger">{{ message }}</span></h4>
    {% else %}
    <h4 class="text-center"><span class="label label-danger">You do not have any notifications</span></h4>
    {% endif %}

</div>

{% endblock %}